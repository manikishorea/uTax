
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="page-header">
        @if (ViewBag.Id == "00000000-0000-0000-0000-000000000000")
        {
            <h2>Bank Sub Question/Create Bank Sub Question</h2>
        }
        else
        {
            <h2>Bank Sub Question/Edit Bank Sub Question</h2>
        }
    </div>

    <input type="hidden" id="Id" value="@ViewBag.Id" />
    <input type="hidden" id="BankId" value="@ViewBag.BankId" />
    <input type="hidden" id="UserId" name="UserId" value="@Session["UserId"].ToString()" />

    <input type="hidden" id="BankProductDocument" name="BankProductDocument" value="NoFile" />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">

        <div class="row">
            <div class="col-md-2">
                <label for="message-text" class="control-label mandatory">Bank Name</label>
            </div>
            <div class="col-md-4">
                <label for="message-text" class="control-label" id="BankName">@ViewBag.BankName</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label for="message-text" class="control-label mandatory">Questions</label>
            </div>
            <div class="col-md-4">
                <input type="text" id="Questions" class="form-control" maxlength="100" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label for="message-text" class="control-label">Description</label>
            </div>
            <div class="col-md-4">
                <textarea type="text" id="Description" class="form-control" maxlength="500"></textarea>
            </div>
        </div>


        <div class="row margin-20">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Submit" class="btn btn-default" onclick="fnSaveBankSubQuestion();" />
                <button type="button" class="btn btn-default" id="btnCancel" onclick="GotoListScreen('@Url.Content("~/banksubquestions/Index/"+@ViewBag.BankId)');">Back</button>
            </div>
        </div>
    </div>
}

@section scripts {
    <script src="~/Scripts/app/common.js"></script>
    <script src="~/Scripts/app/banksubquestion.js"></script>
}
<script type="text/javascript">
    $(document).ready(function () {
        var Id = $('#Id').val();
        getBankSubQuestionDetail(Id);
    });

</script>
