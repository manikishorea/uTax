
@{
    ViewBag.Title = "SubSiteOfficeFeeConfig";
    Layout = "~/Views/Shared/_SubSiteLayout.cshtml";
}
<input type="hidden" id="formid" name="formid" value="active" formid="sited8d06578-1923-4792-bdad-153603b57068" />
<input type="hidden" id="ID" name="ID" />
<h2>Sub-Site Office Fee Configuration</h2>
<div class="panel panel-default subsite">
    <div class="utax-tabs new-label">
        <div class="bs-component">
            <ul style="margin-bottom: 15px;" class="nav nav-tabs">
                <li class="active" id="libankenrollment"><a data-toggle="tab" href="#bankenrollment">Service Bureau<div class="ripple-container"></div></a></li>
                <li id="lionboarding_services"><a data-toggle="tab" href="#onboarding_services">Transmitter</a></li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div id="bankenrollment" class="tab-pane fade active in">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>Please Enter the Service Bureau Fee amount for this sub-site.</label>
                        </div>
                        <div class="col-md-12">
                            <div id="dvServiceBureau"></div>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <a href="javascript:void(0)" class="btn btn-default btn-info" onclick="fnSaveServiceBureau();">Save & Next</a>
                        </div>
                    </div>
                </div>
                <div id="onboarding_services" class="tab-pane fade">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>Please Enter the Transmitter Fee amount for this sub-site.</label>
                        </div>
                        <div class="col-md-12">
                            <div id="dvTransmitter"></div>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <a href="javascript:void(0)" class="btn btn-default btn-info" onclick="fnSaveTransmitter();">Save</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>
@section scripts {
    <script src="~/Scripts/app/common.js"></script>
    <script src="~/Scripts/app/subsiteofficeconfig.js"></script>
}

<script>
    $(document).ready(function () {
        getSubsiteBankAndQuestions($('#dvServiceBureau'), $('#dvTransmitter'));
        GetSubsiteOfficeBankFee($('#UserId').val());
    });
</script>
