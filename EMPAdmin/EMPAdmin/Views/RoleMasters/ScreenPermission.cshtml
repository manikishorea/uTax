@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Manage Role Permission</h2>
</div>

<input type="hidden" id="UserId" name="UserId" value="@Session["UserId"].ToString()" />
<input type="hidden" id="UserRoleId" name="UserRoleId" value="@Session["UserRoleId"].ToString()" />
<input type="hidden" id="RoleId" name="RoleId" value="@ViewBag.RoleId" />
<div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Permissions</h2>&nbsp;
                </div>
                <div class="panel-body" id="div_user">
                    <table id="table_sitemappermission" class="table">
                        <thead>
                            <tr>
                                <th class="no-sort" colspan="6"></th>
                            </tr>
                        </thead>
                    </table>
                    <!-- books -->
                </div>
            </div>

        </div>
        <!-- ko if:detail() -->
    </div>


    <div class="row margin-20">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-default" id="btnSave" onclick="fnSaveSiteRolePermission();">Submit</button>
            <button type="button" class="btn btn-default" id="btnCancel" onclick="GotoListScreen('@Url.Content("~/RoleMasters/Index")');">Back</button>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/app/common.js"></script>
    <script src="~/Scripts/app/sitepermission.js"></script>
}
