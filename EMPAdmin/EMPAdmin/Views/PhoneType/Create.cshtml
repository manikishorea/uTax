@model uTax.Transactions.PhoneType.DTO.PhoneTypeDTO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("CreateUser", "User", FormMethod.Post, new { @id = "CreateUser" }))
{
    <div class="page-header">
        @if (ViewBag.Id == "00000000-0000-0000-0000-000000000000")
        {
            <h2>Phone Type/Create Phone Type</h2>
        }
        else
        {
            <h2>Phone Type/Edit Phone Type</h2>
        }
    </div>

    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" id="Id" value="@ViewBag.Id" />
    <input type="hidden" id="UserId" name="UserId" value="@Session["UserId"].ToString()" />

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label for="message-text" class="control-label mandatory">Phone Type</label>
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.PhoneType, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <label for="message-text" class="control-label">Description</label>
                </div>
                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Submit" class="btn btn-default" onclick="fnSavePhoneType();" />
                    <button type="button" class="btn btn-default" id="btnCancel" onclick="GotoListScreen('@Url.Content("~/phonetype/Index")');">Back</button>
                </div>
            </div>
        </div>
}


@section scripts {
    <script src="~/Scripts/app/common.js"></script>
    <script src="~/Scripts/app/phonetype.js"></script>
}




<script type="text/javascript">
    $(document).ready(function () {
        var Id = $('#Id').val();
        getPhoneTypeDetail(Id);
    });

</script>
