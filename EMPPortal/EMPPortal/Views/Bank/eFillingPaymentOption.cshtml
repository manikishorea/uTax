@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row bank-blk">
    <div class="col-md-12">

        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <h3>e-Filing Payment Options</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group is-empty">
                            <label>How would you like to pay for e-Filling fees incurred by you office and sub-sites?</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="sample3" value="option3" checked="">
                                    Credit Card
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="sample3" value="option3">
                                    Bank Account(Automatic ACH Withdrawal)
                                </label>
                            </div>
                           
                        </div>
                        <div class="bank-sub-opt padding-left-25">
                            <div class="form-group is-empty">
                                <label>Would you like to use the same account that you indentified to recieve your add-on fee reimbursement in the Bank Selection section?</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="sample3" value="option3" checked="">
                                        Yes
                                    </label>

                                    <label>
                                        <input type="radio" name="sample3" value="option3">
                                        No
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="table-responsive e-fill-table">
                            <table class="table table-striped table-hover table-bordered ">
                                <caption>uTax e-Filing Fees Summary</caption>
                                <thead>
                                    <tr>
                                        <th>e-File Fees</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>uTax Federal e-Filing Fee</td>
                                        <td>$1.00</td>
                                    </tr>
                                    <tr>
                                        <td>uTax State e-Filing Fee</td>
                                        <td>$0.50</td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div>
                
                

            </div>









        </div>
    </div>
    <div class="clearfix"> </div>
    <div class="col-md-12">
        <a href="javascript:void(0)" class="btn btn-default btn-info">Save</a>
    </div>

</div>

</div>


@section scripts {
    <script src="~/Scripts/app/common.js"></script>
    <script src="~/Scripts/app/customerInformation.js"></script>
}

<script>
    $(document).ready(function () {
        getAllCustomerInformation();
    });
</script>
