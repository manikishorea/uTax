@model uTax.Transactions.Bank.DTO.BankSubQuestionDTO

@{
    ViewBag.Title = "CreateQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Bank Sub-Questions</h2>

<script src="~/Scripts/app/common.js"></script>
<script src="~/Scripts/app/banksubquestion.js"></script>

@*@using (Html.BeginForm("CreateUser", "User", FormMethod.Post, new { @id = "CreateUser" }))
{*@
     
    <input type="hidden" id="Id" value="@ViewBag.Id" />
    <input type="hidden" id="UserId" name="UserId" value="@Session["UserId"].ToString()" />
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                <label for="message-text" class="control-label mandatory">Sub-question Text:</label>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Questions, new { htmlAttributes = new { @class = "form-control" } })
                <input type="hidden" id="BankId" name="BankId" value="@ViewBag.BankID" /> 
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label for="message-text" class="control-label">Notes:</label>
            </div>
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control",
               @rows = "2",
               @cols = "20"
           } })
            </div>
        </div> 
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Submit" class="btn btn-default" onclick="fnSaveBankSubQuestion();" />

            </div>
        </div>
    </div>
@*}*@

<script type="text/javascript">
    $(document).ready(function () {
        var Id = $('#Id').val();
        getBankSubQuestionDetail(Id);
    });

</script>