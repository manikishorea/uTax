
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>Security Question Master</h2>
</div>
@if (Session.Count>0)
{
    <input type="hidden" id="UserId" name="UserId" value="@Session["UserId"].ToString()" />
    <input type="hidden" id="UserRoleId" name="UserRoleId" value="@Session["UserRoleId"].ToString()" />
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"> &nbsp;
                <h2 class="panel-title" id="AddLink" style="display:none;"><a href="~/securityquestion/create">Create Security Question Master</a></h2>
            </div>
            <div class="panel-body" id="div_user">
                <table id="table_securityquestion" class="table">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
                <!-- books -->
            </div>
        </div>

    </div>



    <!-- ko if:detail() -->
</div>

@section scripts {
    <script src="~/Scripts/app/common.js"></script>
    <script src="~/Scripts/app/securityquestion.js"></script>
}

<script>
    $(document).ready(function () {
        getAllSecurityQuestion();
        

        var userId = $("#UserId").val();
        var roleId = $("#UserRoleId").val();

        ctrlAddLink = $("#AddLink");
        ctrlEditLink = $("table#table_securityquestion .EditLink");
        ctrlActiveInactiveLink = $("table#table_securityquestion .ActiveInactiveLink");
        getScreenPermissions(ctrlAddLink, ctrlEditLink, ctrlActiveInactiveLink, '',userId, roleId);
    });

</script>
